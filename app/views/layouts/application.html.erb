<!DOCTYPE html>
<html>
  <head>
    <title>DemoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("DemoApp", "/") %>
      </div>

      <ul class="header-menus">
        <li>
          <%= link_to("index", "/posts/index") %>
        </li>
        <li>
          <%= link_to("about", "/about") %>
        </li>
        <li>
          <%= link_to("NewPost", "/posts/new")%>
        </li>
        <li>
          <%= link_to("Users", "/users/index") %>
        </li>
        <% if session[:user_id] %>
          <li>
            <%= session[:user_id] %>
          </li>
        <% else %>
        <li>
          <%= link_to("Sign up", "/signup") %>
        </li>
        <li>
          <%= link_to("Login", "/login") %>
        </li>
        <% end %>
        
      </ul>

      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </header>
    
    <%= yield %>
  </body>
</html>
