<!DOCTYPE html>
<html>
  <head>
    <title>DemoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("DemoApp", "/posts/index") %>
        <% else %>
          <%= link_to("DemoApp", "/") %>
        <% end %>
      </div>

      <ul class="header-menus">
        <li>
          <%= link_to("index", "/posts/index") %>
        </li>

        <% if @current_user %>
          <li>
            <%= link_to("Users", "/users/index") %>
          </li>
          <li>
            <%= link_to("NewPost", "/posts/new")%>
          </li>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("logout", "/logout", {method: :post}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("about", "/about") %>
          </li>
          <li>
            <%= link_to("Sign up", "/signup") %>
          </li>
          <li>
            <%= link_to("Login", "/login") %>
          </li>
        <% end %>
        
      </ul>

      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </header>
    
    <%= yield %>
  </body>
</html>
